<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Eco_Ease_Recycling.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Eco_Ease_Recycling"
    xmlns:views="clr-namespace:Eco_Ease_Recycling.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Eco_Ease_Recycling">

    
    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
    Title="Homepage"
    ContentTemplate="{DataTemplate views:Homepage}"
    Route="Homepage" />


    <ShellContent
   Title="CreateAccount"
   ContentTemplate="{DataTemplate views:CreateAccount}"
   Route="CreateAccount" />

    <ShellContent
    Title="LoadingPage"
    ContentTemplate="{DataTemplate views:LoadingPage}"
    Route="LoadingPage" />

    <ShellContent 
        Title="QR Scan"
        ContentTemplate="{DataTemplate views:QRScan}"
        Route="QR scan"/>


</Shell>
