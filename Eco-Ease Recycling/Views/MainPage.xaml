<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eco_Ease_Recycling.Views.MainPage"
             Title="MainPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Image x:Name="SplashImage" 
           Margin="0,0"
           Aspect="AspectFill"
           HeightRequest="810"
           WidthRequest="400"
           HorizontalOptions="Center"/>
        <Button
         Margin="185,680,0,0"
         BackgroundColor="#22BA43"
         HeightRequest="54"
         WidthRequest="173" 
         CornerRadius="14"
         FontFamily="AnybodyRegular"
         FontSize="16"
         Command="{Binding NavigateCreateAccountCommand}"
         Text="Sign Up"/>
        <Button
         Margin="0,680,185,0"
         BackgroundColor="#00FFFFFF"
         BorderColor="White"
         BorderWidth="2"
         HeightRequest="54"
         WidthRequest="173" 
         CornerRadius="14"
         FontFamily="AnybodyRegular"
         FontSize="16"
         Command="{Binding LoginCommand}"
         Text="Log in"/>
        <!--Clicked="Button_Clicked_1"  
    />-->
    </Grid>

</ContentPage>
