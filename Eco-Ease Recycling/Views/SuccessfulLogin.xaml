<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eco_Ease_Recycling.Views.SuccessfulLogin"
             Title="SuccessfulLogin">
    <StackLayout>
        <Grid  BackgroundColor="White">
            <Grid Margin="0,150,0,0">
                <Image Aspect="AspectFit"
               HeightRequest="200"
               Source="login.png"
               VerticalOptions="Start"
               HorizontalOptions="Center"/>
                <Grid Margin="0,250,0,0">
                    <Label FontFamily="AnybodyRegular"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"
                   Text="You have successfully created an account!"
                   TextColor="Black"/>
                </Grid>
                <Grid Margin="0,280,0,0">
                    <Label FontFamily="AnybodyRegular"
                   HorizontalTextAlignment="Center"
                   Text="Welcome to Eco-Ease,log into your account and start recycling"
                   TextColor="Gray"/>
                </Grid>
                <Button
                 Margin="0,540,0,0"
                 BackgroundColor="LimeGreen"
                 HeightRequest="40"
                 Text="Login"/>
                
            </Grid>
        </Grid>
    </StackLayout>
</ContentPage>